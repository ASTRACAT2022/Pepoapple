APP_NAME=Pepoapple Core
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8080

# Local (non-docker) backend run
DATABASE_URL=postgresql+psycopg://pepoapple:pepoapple@localhost:5432/pepoapple
REDIS_URL=redis://localhost:6379/0
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
RATE_LIMIT_PER_MINUTE=120
BACKUP_DIR=./backups
WEBHOOK_TIMEOUT_SECONDS=5

# Docker overrides (used by docker-compose)
DOCKER_DATABASE_URL=postgresql+psycopg://pepoapple:pepoapple@db:5432/pepoapple
DOCKER_REDIS_URL=redis://redis:6379/0
SEED_SQUAD_NAME=DOCKER-DEMO
NODE_1_TOKEN=demo-node-1-token
NODE_2_TOKEN=demo-node-2-token
AGENT_HEARTBEAT_INTERVAL_SEC=15
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
