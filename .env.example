APP_NAME=Pepoapple Core
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8080

# Local (non-docker) backend run
DATABASE_URL=postgresql+psycopg://pepoapple:pepoapple@localhost:5432/pepoapple
REDIS_URL=redis://localhost:6379/0
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30
RATE_LIMIT_PER_MINUTE=120
BACKUP_DIR=./backups
WEBHOOK_TIMEOUT_SECONDS=5
CORS_ALLOW_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
PUBLIC_API_BASE_URL=http://localhost:8080

# Docker overrides (used by docker-compose)
DOCKER_DATABASE_URL=postgresql+psycopg://pepoapple:pepoapple@db:5432/pepoapple
DOCKER_REDIS_URL=redis://redis:6379/0
SEED_SQUAD_NAME=DOCKER-DEMO
NODE_1_TOKEN=demo-node-1-token
NODE_2_TOKEN=demo-node-2-token
AGENT_HEARTBEAT_INTERVAL_SEC=15
AGENT_RUNTIME_MODE=process
AGENT_SINGBOX_RUN_COMMAND=sing-box run -D /data -c /data/singbox.json
AGENT_AWG2_RUN_COMMAND=awg2 -f wg0
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_SCOPES=*

# Optional dedicated subscription page service
SUBPAGE_PANEL_API_BASE_URL=http://api:8080
SUBPAGE_PAGE_TITLE=Pepoapple Subscription
SUBPAGE_SUPPORT_URL=https://t.me/
SUBPAGE_SHOW_RAW_LINKS=true
SUBPAGE_CUSTOM_SUB_PREFIX=
